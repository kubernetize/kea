image: rkojedzinszky/kea:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
- {{this}}
{{/each}}
{{/if}}
manifests:
- image: rkojedzinszky/kea:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}arm64v8
  platform:
    os: linux
    architecture: arm64
    variant: v8
- image: rkojedzinszky/kea:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}amd64
  platform:
    os: linux
    architecture: amd64
